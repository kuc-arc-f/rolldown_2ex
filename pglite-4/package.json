{
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "npm run build:js && npm run build:css",
    "build:server": "npx esbuild --bundle --format=esm --platform=node ./src/index.ts  --outfile=./dist/index.js",
    "build:js": "npx esbuild --bundle src/entry-client.tsx --minify --outfile=./public/static/entry-client.js",
    "build:css": "npx @tailwindcss/cli -i ./src/main.css -o ./public/static/main.css",
    "clean": "rimraf dist && rimraf public/static",
    "start": "npx tsx ./src/index.ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.7",
    "@tailwindcss/cli": "^4.1.8",
    "axios": "^1.6.5",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.21.2",
    "tailwindcss": "^4.1.8",
    "tsx": "^4.20.4",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "esbuild": "^0.25.8",
    "globals": "^16.1.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "~5.8.3"
  }
}
